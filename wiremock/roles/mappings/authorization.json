{
    "request": {
        "method": "GET",
        "urlPattern": "/api/v1/users/([^/]+)/authorization"
    },
    "response": {
        "status": 200,
        "headers": {
            "Content-Type": "application/json"
        },
        "jsonBody": {
            "userId": "{{request.requestLine.pathSegments.[3]}}",
            "roles": [
                "developer",
                "admin"
            ],
            "permissions": [
                "read:all",
                "write:all"
            ],
            "tenant": "tenant-A"
        }
    }
}